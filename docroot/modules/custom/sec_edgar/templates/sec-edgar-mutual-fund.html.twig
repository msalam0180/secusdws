{{ attach_library('sec_edgar/edgar-company-person') }}

{% set content %}
<h2>{{ title }}</h2>
<form id="sec-edgar-company-person-form" class="usa-form" method="get" action="{{ submission_url }}">
	<div>
		<div class="form-item">
			<input name="sc" type="hidden" value="companyseries" alt="Company Series">
			<input name="type" type="hidden" value="N-PX" alt="Form N-PX">
			<div class="inline-form">
				<input class="usa-input" name="company" type="text" alt="{{ title }}" aria-invalid="false" aria-required="true" placeholder="{{ title }}" size="40">
				<button class="collapsed-submit usa-button" type="submit" alt="Fund Search Field">Search</button>
			</div>
			<div class="element-description usa-hint">{{ description }}</div>
		</div>
	</div>
</form>
{% endset %}

{{ pattern('callout', {
  'content': content,
}) }}
