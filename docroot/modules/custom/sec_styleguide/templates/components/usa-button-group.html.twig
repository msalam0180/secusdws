<h2>{{ 'Segmented button group' }}</h2>

{# Note: Wrap in div to prevent “usa-prose” styles from affecting the component #}
<div>
  {% for item in button_segmented %}
    {% if item.is_inverse == 'true' %}
      <div class="bg-base-darkest padding-1 margin-bottom-2" style="max-width: fit-content">
    {% endif %}

    <ul class="usa-button-group usa-button-group--segmented {% if item.is_inverse == 'false' %} margin-bottom-2"{% endif %}>
      {# Array of button names. #}
      {% set button_names = [
        {'button_name':'Map'},
        {'button_name':'Hybrid'},
        {'button_name':'Satellite'},
      ] %}

      {% for name in button_names %}
        {% if item.first_no_modifer == 'true' and loop.first == false %}
          {% set class = '' %}
        {% else %}
          {% set class = item.modifier %}
        {% endif %}

        <li class="usa-button-group__item">
          <button type="button" class="usa-button {{ class }}">{{ name.button_name }}</button>
        </li>
      {% endfor %}
    </ul>

    {% if item.is_inverse == 'true' %}
      </div>
    {% endif %}
  {% endfor %}
</div>
