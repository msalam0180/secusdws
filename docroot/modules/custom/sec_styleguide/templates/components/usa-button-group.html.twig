{% set component_details = module_path ~ '/templates/component_details.html.twig' %}
{% include component_details %}

<h2>{{ 'Default button group' }}</h2>

{# Note: Wrap in div to prevent “usa-prose” styles from affecting the component #}
<div>
  <ul class="usa-button-group">
    <li class="usa-button-group__item">
      <a href="javascript:void(0);" class="usa-button usa-button--outline">Back</a>
    </li>
    <li class="usa-button-group__item">
      <button type="button" class="usa-button">Continue</button>
    </li>
  </ul>
</div>

{# These are the preferred style variations #}
{% set button_segmented = [
  {'modifier':'usa-button--outline', 'is_inverse':'false', 'first_no_modifer':'true'},
  {'modifier':'', 'is_inverse':'false', 'first_no_modifer':'false'},
  {'modifier':'usa-button--outline', 'is_inverse':'false', 'first_no_modifer':'false'},
] %}

