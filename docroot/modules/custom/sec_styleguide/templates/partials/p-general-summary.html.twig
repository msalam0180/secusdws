<div
  class="usa-summary-box"
  role="region"
  aria-labelledby="summary-box-key-information">

  <div class="usa-summary-box__body">

    <h2 class="usa-summary-box__heading" id="summary-box-key-information">
      {{ summary_title | t }}
    </h2>

    <div class="usa-summary-box__text">

      <p>{{ summary_text | t }}</p>

      <a class="usa-button usa-button--outline usa-button--inverse"
         href="{{ summary_link }}"
        {% if external_link %}{{ external_link }}{% endif %}
         title="{{ summary_link_text | t }}">
        {{ summary_link_text | t }}
      </a>

    </div>
  </div>
</div>
