{% if variant != '' and variant|lower != 'default' %}
  {% set attributes = attributes.addClass('usa-button-group', 'usa-button-group--' ~ variant|lower|replace({'_': '-'})) %}
{% else %}
  {% set attributes = attributes.addClass('usa-button-group') %}
{% endif %}

<ul{{ attributes.setAttribute('role', 'group').setAttribute('aria-label', label) }}>
  {% for button in buttons %}
    <li class="usa-button-group__item">
      {{ button }}
    </li>
  {% endfor %}
</ul>