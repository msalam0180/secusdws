{# Homepage Hero #}
{# use_full_width - This is used to syle the Hero full width or not. The Hero is not full width in Layout Builder #}

<div class="{{ use_full_width ? 'l-wrap--wide' : '' }}">
  <div class="{{ use_full_width ? 'home-hero l-fullwidth' : 'home-hero' }}">
    <div class="home-hero__inner bg-navy bg-gradient-overlay l-padding">
      <div class="home-hero__wrap l-wrap--wide">
        {# Blue banner content #}
        <div class="home-hero__banner bg-navy bg-gradient-overlay l-padding">
          <p class="home-hero__banner__heading">{{ hero_headline }}</p>
          {% if hero_body | render | length > 0 %}
            <div class="home-hero__banner__body">
              {{- hero_body | raw -}}
            </div>
          {% endif %}
          {% if hero_button | render | length > 0 %}
            {{ hero_button }}
          {% endif %}
        </div>

        {# Quick links #}
        <div class="home-hero__links l-padding">
          <div class="home-hero__links__wrap bg-default">
            <h2 class="home-hero__links__heading">{{ quick_links_headline }}</h2>
            {% if quick_links_body | render | length > 0 %}
              <div class="home-hero__links__body">{{- quick_links_body | raw -}}</div>
            {% endif %}
            {% if quick_links_body | render | length > 0 %}
              <ul class="home-hero__links__list" role="list">
                {{ quick_links }}
              </ul>
            {% endif %}
          </div>
          {# SEC seal (hidden in mobile) #}
          {# TODO: Consider adding seal to SVG sprite if used on most pages #}
          <div class="home-hero__links__seal">
            {{ source(active_theme_path() ~ '/dist/img/logos/sec-logo-seal-fill.svg') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
