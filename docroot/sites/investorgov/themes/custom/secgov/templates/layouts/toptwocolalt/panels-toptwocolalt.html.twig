{#
/**
 * @file
 * Template for a 2 column panel layout.
 *
 * This template provides a two column panel display layout, with
 * the left column consuming 75% of the available width and the right
 * the remaining 25%.
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   - $content['top']: Content in the top panel that holds the page title.
 *   - $content['left']: Content in the left column.
 *   - $content['right']: Content in the right column.
 */
#}

{{ attach_library('secgov/panel-layouts-toptwocolalt') }}

<div class="panel-display panel-2col clearfix" {% if css_id %}{{ css_id }}{% endif %}>
  {% if content.top %}
  <div class="panel-panel panel-top">
  	{{ content.top }}
  </div>
{% endif %}
  <div class="panel-panel panel-col-first alt">
    <div class="inside">{{ content.left }}</div>
  </div>

  <div class="panel-panel panel-col-last alt">
    <div class="inside">{{ content.right }}

    </div>
  </div>
</div>
