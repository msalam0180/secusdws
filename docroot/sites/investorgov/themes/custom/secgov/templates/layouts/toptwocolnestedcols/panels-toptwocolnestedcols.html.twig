{#
/**
 * @file
 * Template for a 2 column panel layout.
 *
 * This template provides a two column panel display layout, with
 * each column roughly equal in width.
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   - $content['top']: Content in the top panel that holds the page title.
 *   - $content['main-top']: Content in the main column, top section of the column.
 *   - $content['main-left']: Content in the main-left column.
 *   - $content['main-right']: Content in the main-right column.
 *   - $content['main-bottom']: Content in the main column, bottom section of the column.
 *   - $content['right']: Content in the sidebar column.
 */
#}

{{ attach_library('secgov/panel-layouts-toptwocolnestedcols') }}

<div class="panel-display panel-2col clearfix" {% if css_id %}{{ css_id }}{% endif %}>
  <div class="panel-panel panel-top">
  	{{ content.top }}
  </div>

  <div class="panel-panel panel-col-first">
	<div class="inside">{{ content.maintop }}</div>
	<div class="nested-column-2">{{ content.mainleft }}</div>
	<div class="nested-column-2 last">{{ content.mainright }}</div>
	<div class="inside">{{ content.mainbottom }}</div>
  </div>

  <div class="panel-panel panel-col-last">
    <div class="inside">{{ content.sidebar }}</div>
  </div>
</div>
