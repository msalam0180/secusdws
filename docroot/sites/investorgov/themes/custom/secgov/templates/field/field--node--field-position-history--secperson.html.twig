{% for item in element['#object'].field_position_history if not break %}
  {% if item.getFieldCollectionItem().field_current_position.value == 0 %}
  <div class="position-history-row">

      {% set positionType = item.getFieldCollectionItem().field_position_category.value == 'Chair' ? 'Chairman' : item.getFieldCollectionItem().field_position_category.value %}
      {% set positionTitle = item.getFieldCollectionItem().field_position_title.value %}

      {% if positionType is same as('Chairman') and positionTitle == true %}
          <span class="position-title"><strong>{{ positionTitle }}</strong>:</span>
      {% elseif positionType is same as('Chairman') and positionTitle == false %}
          <span class="position-type"><strong>{{ positionType }}</strong>:</span>
      {% elseif positionType is same as('Commissioner') and positionTitle == true %}
          <span class="position-title"><strong>{{ positionTitle }}</strong>:</span>
      {% elseif positionType is same as('Commissioner') and positionTitle == false %}
          <span class="position-type"><strong>{{ positionType }}</strong>:</span>
      {% elseif positionType is same as('Other') and positionTitle == true %}
          <span class="position-title"><strong>{{ positionTitle }}</strong>:</span>
      {% else %}
          <span class="position-type"><strong>{{ positionType }}</strong>:</span>
      {% endif %}

        <span class="from">{{ item.getFieldCollectionItem().field_from.value|apDateMonthYear }}</span> -
        <span class="to">{{ item.getFieldCollectionItem().field_to.value|apDateMonthYear }}</span>

  </div>
  {% endif %}
{% endfor %}